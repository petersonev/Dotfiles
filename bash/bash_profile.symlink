# Alias to connect to Pulsed Media seedbox
seedbox() {
if [ "$1" == "ssh" ] 
then
    ssh #password@host
else    
    lftp -u #password,xxx sftp://#host
fi
}
# Function to compile and run C++ file with max of 3 arguments
cpprun() {
    g++ "$1";
    ./a.out "$2" "$3";
    rm a.out;
}

# Function to compile and run C file with max of 3 arguments
crun() {
    gcc "$1";
    ./a.out "$2";
    rm a.out;
}

