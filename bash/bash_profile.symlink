function makePrompt() {
  local exit_status=$?
  local ARROW=$'\xEE\x82\xB0'
  local GIT=$'\xEE\x82\xA0'
  local b="$(git symbolic-ref HEAD 2>/dev/null)";

  if [ $exit_status == 0 ]; then
    PS1="\[\e[48;5;31m\] \t\[\e[38;5;31m\]";
  else
    PS1="\[\e[48;5;124m\] \t\[\e[38;5;124m\]";
  fi
  
  #PS1="$PS1\[\e[38;5;251m\] \W \[\e[38;5;235;49m\]$ARROW"
  #PS1="$PS1\[\e[38;5;251m\] \W "

  if [ -n "$b" ]; then
    PS1="$PS1\[\e[48;5;28m\]$ARROW\[\e[39m\] $GIT\[\e[38;5;28m\]";
    #${b##refs/heads/}
  fi
  
  PS1="$PS1\[\e[48;5;241m\]$ARROW\[\e[48;5;241;38;5;248m\] \W\[\e[38;5;235;49m\]$ARROW \[\e[0m\]"
  #PS1="$PS1\[\e[38;5;251m\]\W \[\e[38;5;235;49m\]$ARROW\[\e[0m\] "
}
PROMPT_COMMAND=makePrompt
export CLICOLOR=1

